@model MVCeCommerce.ViewModel.ItemCreateViewModel

@{
    ViewBag.Title = "新增商品";
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

@*標題*@
<div class="page-header">
    <h1>新增商品</h1>
</div>

<div class="form-horizontal">
    @using (Html.BeginForm("Add", "Item", FormMethod.Post, new { enctype = "mutipart/form-data" }))
    {
        <div class="alert alert-warning">
            @Html.ValidationSummary()
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NewDate.Name, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(model => model.NewDate.Name, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewDate.Name, null, new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewDate.Price, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(model => model.NewDate.Price, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewDate.Price, null, new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ItemImage, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(model => model.ItemImage, null, new { @class = "form-control", type = "file" })
                @Html.ValidationMessageFor(model => model.ItemImage, null, new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" class="btn btn-primary" value="新增" />
            </div>
        </div>
    }
</div>