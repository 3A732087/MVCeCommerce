@model MVCeCommerce.ViewModel.ArticleIndexViewModel
@{
    ViewBag.Title = "人氣文章列表";
}
@*宣告變數rank，紀錄排名*@
@{ int rank = 1; }

<div class="page-header">
    <h1>人氣文章列表</h1>
</div>

@*文章列表*@
<div class="table-responsive">
    <table class="table table-hover">
        @if (!Model.DataList.Count.Equals(0))
        {
            <thead>
                <tr>
                    <th class="text-center">
                        排名
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.DataList[0].Title)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.DataList[0].Watch)
                    </th>
                </tr>
            </thead>
            foreach (var item in Model.DataList)
            {
                <tr>
                    <td class="text-center">
                        @rank
                        @{ rank++; }
                    </td>
                    <td class="text-center">
                        @Html.ActionLink(item.Title, "Article", new { A_Id = item.A_Id })
                    </td>
                    <td class="text-right">
                        @item.Watch
                    </td>
                </tr>
            }
        }
        @*資料庫中無任何一筆文章，將顯示尚未有文章的資訊*@
        else
        {
            <tr>
                <td colspan="4">
                    尚未有文章
                </td>
            </tr>
        }
    </table>
</div>
