@model MVCeCommerce.ViewModel.MembersLoginViewModel

@{
    ViewBag.Title = "登入";
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval");
}


<div class="page-header">
    <h2>會員登入</h2>
</div>

<div class="form-horizontal">
    @using (Html.BeginForm())
    {
        <div class="alert alert-warning">
            @Html.ValidationSummary()
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Account, null, new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="登入" class="btn btn-primary" />
                @Html.ActionLink("去註冊", "Register")
            </div>
        </div>
    }
</div>
